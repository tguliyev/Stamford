@model Post
@{
    Layout = "_Layout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post" asp-controller="Post" asp-action="AddPost" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Başlıq</label>
                    <input type="text" class="form-control" id="title" placeholder="Post Başlıq" asp-for="Title" >
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıqlama</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Açıqlama" asp-for="Content" />
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" placeholder="Upload Image">
                        <span class="btn btn-danger btn-file">
                            Browse <input type="file" name="userfile" multiple/>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark">Cancel</button>
            </form>
        </div>
    </div>
</div>