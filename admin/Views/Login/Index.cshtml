@model User

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Login Page</title>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
  <div id="bg"></div>

  <form asp-controller="Login" asp-action="Panel" method="post">
    <div class="form-field">
      <input type="email" asp-for="Email"  placeholder="Email / Username" required />

    </div>

    <div class="form-field">
      <input type="password" asp-for="Password" placeholder="Password" required />
    </div>

    <div class="form-field">
      <button class="btn" type="submit">Log in</button>
    </div>
  </form>
</body>

</html>