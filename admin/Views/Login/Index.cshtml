@model User
@{
  string? msg = TempData["mjg"] as string;
}

<style>
a:link{
  text-decoration: none!important;
}
h2,label{
  font-family: "Roboto Mono";
}
</style>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Stamford Admin</title>
    <link rel="stylesheet" href="~/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@500&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth bg-primary">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h2 class="card-title text-left mb-3 text-center">Login</h2>
                <form asp-controller="Login" asp-action="Panel" method="post">
                  <div class="form-group">
                    <label>Mail daxil edin</label>
                    <input class="form-control p_input" type="email" asp-for="Email"  placeholder="Email / Username" required />
                  </div>
                  <div class="form-group">
                    <label>Şifrə daxil edin</label>
                    <input  class="form-control p_input" type="password" asp-for="Password" placeholder="Password" required />
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between">
                  <button class="btn btn-primary w-50" type="submit">Log in</button>
                    <a href="#" class="forgot-pass">Forgot password</a>
                  </div>
                </form>
                <p style="color:#fff">@msg</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/js/vendor.bundle.base.js"></script>
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
  </body>
</html>