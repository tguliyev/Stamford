@model User
@{
  string? msg = TempData["mjg"] as string;
}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Stamford Admin</title>
    <link rel="stylesheet" href="~/css/materialdesignicons.min.css" />
    <link rel="stylesheet" href="~/css/vendor.bundle.base.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="shortcut icon" href="~/favicon.ico" />
  </head>
  <body>
    <div class="container-scroller">
      <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
          <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
            <div class="card col-lg-4 mx-auto">
              <div class="card-body px-5 py-5">
                <h3 class="card-title text-left mb-3">Login</h3>
                <form asp-controller="Login" asp-action="Panel" method="post">
                  <div class="form-group">
                    <label>Mail daxil edin</label>
                    <input class="form-control p_input" type="email" asp-for="Email"  placeholder="Email / Username" required />
                  </div>
                  <div class="form-group">
                    <label>Şifrə daxil edin</label>
                    <input  class="form-control p_input" type="password" asp-for="Password" placeholder="Password" required />
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between">
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input"> Remember me </label>
                    </div>
                    <a href="#" class="forgot-pass">Forgot password</a>
                  </div>
                  <button class="btn" type="submit">Log in</button>
                </form>
                <p style="color:#fff">@msg</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/js/vendor.bundle.base.js"></script>
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/misc.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
  </body>
</html>